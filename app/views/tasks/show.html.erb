<h1>Task Description</h1>
<h2><%= @task.title %></h2>

<p><%= @task.details %></p>
<% if @task.completed === false %>
<p><%= "This task is not completed yet!" %></p>
<% else %>
<p><%= "This task is completed!" %> </p>
<% end %>
<p><%= link_to "Back to list", tasks_path %></p>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>


<p><%= link_to "Update", edit_task_path(@task) %></p>

